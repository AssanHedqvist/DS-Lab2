@model IEnumerable<ProjectApp.Models.Auctions.AuctionVm>

@{
    ViewData["Title"] = "View User Auctions";
}
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Start Price
        </th>
        <th>
            Username
        </th>
        <th>
            Expiration Date
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var auction in Model)
    {
        <tr>
            <td>
                @auction.name
            </td>
            <td>
                @auction.startPrice
            </td>
            <td>
                @auction.username
            </td>
            <td>
                @auction.expirationDate
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteAuction", new { id = auction.Id, username = auction.username }, new { @class = "text-danger" })
            </td>
        </tr>
    }
    </tbody>
</table>