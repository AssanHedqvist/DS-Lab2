@model ProjectApp.Models.Auctions.AuctionDetailsVm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.startPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.startPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.expirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.expirationDate)
        </dd>
    </dl>
</div>
<h2>Bids</h2>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.bidVms[0].username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bidVms[0].bidSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bidVms[0].bidTime)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var bidVm in Model.bidVms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => bidVm.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bidVm.bidSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bidVm.bidTime)
            </td>
        </tr>
    }
    </tbody>
</table>
@if (Model.username != User.Identity.Name)
{
    <div>
        <form asp-action="PlaceBid" method="post">
            <input type="hidden" name="auctionId" value="@Model.Id" />
            <div class="input-group">
                <input type="number" name="bidSize" class="form-control" placeholder="Your bid" required />
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary">Bid</button>
                </span>
            </div>
        </form>
    </div>
}
